body
	font-family: Arial

.layout

	&__wrapper
		height: $page-height
		position: relative
		background-color: #fce4d1
		width: $page-width
		overflow: hidden

	&__content
		position: relative
		height: $page-height - $layout-header-height - $layout-footer-height
		top: $layout-header-height - 1
		line-height: 18px
		margin-left: 44px

	&__header
		background-image: url('static/images/layout-header.png')
		height: $layout-header-height
		width: 100%
		background-size: contain
		background-repeat: no-repeat
		position: absolute
		top: 0

	&__footer
		height: 22px
		width: 100%
		position: absolute
		bottom: 0
		background-color: $orange-color

	&__title
		margin: 0
		font-size: 15px
		text-transform: uppercase
		color: $orange-color
		position: absolute
		top: 13px

	&__content-button
		background-color: #e39775
		display: inline-block
		border: 2px solid #d98f73
		text-transform: uppercase
		color: #fff
		text-decoration: none
		border-radius: 4px
		padding: 3px 3px 0
		font-size: 10px
		box-shadow: 1px 1px 1px 0 #e5a386
		cursor: pointer
		position: absolute
		right: 0
		bottom: 4px

		&:hover
			box-shadow: none
			right: -1px
			bottom: 3px

	&__page-num
		font-size: 12px
		color: $orange-color
		position: absolute
		bottom: 6px

		&--left
			left: 22px

		&--center
			left: 520px



