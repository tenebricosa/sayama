$frame-n = 1..3
$frame-height = 226px
$frame-margin = 6px

.frame

	&__border,
	&__container
		width: 342px
		height: 704px
		position: absolute
		right: 0
		top: $layout-header-height - 1

	&__border
		background-image: url('static/images/frame.png')
		background-repeat: no-repeat

	&__shot
		width: 286px
		height: $frame-height
		background-image: url('static/images/frame-img.png')
		position: absolute
		right: 28px

		for num in $frame-n
			&:nth-of-type({num})
				top: $frame-margin * num + $frame-height * (num - 1)
