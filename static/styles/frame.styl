$frame-n = 1..3
$frame-height = 228px
$frame-margin = 6px

.frame
	background-image: url('static/images/frame.png')
	width: 342px
	height: 704px
	position: absolute
	right: 0
	top: $layout-header-height - 1
	background-repeat: no-repeat

	&__shot
		width: 286px
		height: $frame-height
		background-image: url('static/images/frame-img.jpg')
		position: absolute
		left: 29px

for num in $frame-n
	.frame__shot:nth-child(num)
		top: ($frame-height + $frame-margin) * num
